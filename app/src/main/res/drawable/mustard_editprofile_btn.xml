<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#FFA000" /> <!-- Darker yellow when pressed -->
            <corners android:radius="30dp" />
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- White border -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#E4A824" /> <!-- Default yellow color -->
            <corners android:radius="30dp" />
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- White border -->
        </shape>
    </item>
</selector>
