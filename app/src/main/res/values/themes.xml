<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MIOK_Quick_Response_App" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#004B8C</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Navigation View style -->
    <style name="NavViewStyle" parent="Widget.Design.NavigationView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="itemTextColor">@android:color/white</item>
        <item name="itemIconTint">@android:color/white</item>
    </style>
    <style name="CustomDatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Set the background color of the entire DatePickerDialog -->
        <item name="android:background">#E5EDF3</item>

        <!-- Set the primary text color (used for dates and text inside the dialog) -->
        <item name="android:textColorPrimary">#004B8C</item>

        <!-- Set the header background color (month/year selection area) -->
        <item name="android:colorAccent">#004B8C</item>

        <!-- Set the footer background color (buttons like OK/Cancel) -->
        <item name="android:colorPrimaryDark">#E4A824</item>

        <!-- Set the text color for the header (month/year picker), making it white -->
        <item name="android:textColorPrimaryInverse">#004B8C</item>

        <!-- Set the color for the selected date background -->
        <item name="android:colorControlActivated">#E4A824</item>

        <!-- Set the color for unselected days in the date grid -->
        <item name="android:colorControlNormal">@android:color/darker_gray</item>

        <!-- Set the text color for date picker buttons (OK, Cancel) -->
        <item name="android:textColorSecondary">#004B8C</item>

        <!-- Set the spinner style for DatePicker's spinner controls (used for selecting date) -->
        <item name="android:spinnerStyle">@android:style/Widget.DeviceDefault.Spinner</item>
    </style>
</resources>