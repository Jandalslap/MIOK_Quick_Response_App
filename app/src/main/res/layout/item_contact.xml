<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E5EDF3"
    android:orientation="horizontal"
    android:paddingHorizontal="16dp">


    <!-- CardView for individual list item -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="1dp"
        android:layout_marginVertical="6dp">

        <!-- Card background image -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/edit_button_homefragment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp">

            <!-- Name Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:orientation="horizontal"
                android:layout_marginStart="4dp"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/name_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingRight="7dp"
                    android:drawableStart="@drawable/ic_yellow_contacts"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/contact_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Name"
                    android:textSize="16sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <!-- Phone Number Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="4dp"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/phone_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingRight="7dp"
                    android:drawableStart="@drawable/ic_yellow_phone_circle"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/contact_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <!-- Relationship Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="4dp"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/relationship_label"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingRight="7dp"
                    android:drawableStart="@drawable/ic_yellow_phone_relation"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/contact_relationship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Relationship"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>
            </LinearLayout>

            <!-- Status Row -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="8dp"
                android:padding="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Appointed by Oranga Tamariki?"
                    android:textSize="14sp"
                    android:paddingRight="7dp"/>

                <TextView
                    android:id="@+id/contact_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
