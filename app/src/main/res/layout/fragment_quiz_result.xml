<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#E5EDF3"
    android:gravity="center">

    <!-- Progress bar at the top -->
    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp">

        <View
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:background="#004B8C"
            android:layout_margin="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:background="#004B8C"
            android:layout_margin="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:background="#004B8C"
            android:layout_margin="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:background="#004B8C"
            android:layout_margin="4dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_weight="1"
            android:background="#004B8C"
            android:layout_margin="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="150dp"
        android:gravity="center">
    <ImageView
        android:id="@+id/quizResultImageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/kiwi_result"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/quizResultTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        android:text="Thanks for answering! \nResults have been sent to your contacts."
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/opensans_regular"
        android:textColor="@color/Blue"
        android:textSize="22sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    </LinearLayout>
</LinearLayout>