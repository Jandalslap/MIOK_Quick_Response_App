<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="80dp"
    >

    <!-- after creating .ProfileContacts file
    tools:context=".ui.tasks.ProfileContacts">-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E5EDF3"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profile_add_task"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="30dp"
            android:background="@drawable/mustard_fragment_profile_contacts"
            android:contentDescription="Add contact"
            android:fontFamily="@font/lalezar_regular"
            android:padding="5dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_add_contacts"
            android:text="@string/profile_add_task"
            android:textColor="#ffffff" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_tasks"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:layout_weight="1"
            android:clipToPadding="false" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
