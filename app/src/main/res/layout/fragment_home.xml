<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E5EDF3"
    android:gravity="center">

    <TextView
        android:id="@+id/homeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-90dp"
        android:layout_marginBottom="14dp"
        android:text="@string/homeTextView"
        android:textColor="#004B8D"
        android:textSize="24sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_quiz"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:background="@drawable/edit_button_homefragment"
        android:fontFamily="@font/lalezar_regular"
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:text="@string/button_quiz"
        android:paddingLeft="20dp"/>
<!--    Broke when I pulled updates?? commented out temporarily.
        android:drawableLeft="@drawable/miok_kiwi_only_resized"-->




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_contact"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/mustard_button_homefragment"
        android:fontFamily="@font/lalezar_regular"
        android:textAlignment="textStart"
        android:text="@string/button_contact"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:drawableStart="@drawable/ic_contacts2"
        android:drawablePadding="20dp"
        android:padding="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_message"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mustard_button_homefragment"
        android:drawableStart="@drawable/ic_message_wbg_copy"
        android:drawablePadding="20dp"
        android:fontFamily="@font/lalezar_regular"
        android:textAlignment="textStart"
        android:padding="20dp"
        android:text="@string/button_message"
        android:textSize="16sp"
        android:textColor="#ffffff" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_profile"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mustard_button_homefragment"
        android:text="@string/button_profile"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:padding="20dp"
        android:textAlignment="textStart"
        android:fontFamily="@font/lalezar_regular"
        android:drawableStart="@drawable/ic_contact_wbg_copy"
        android:drawablePadding="20dp" />


    <!-- Add more UI elements here -->
</LinearLayout>
