<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E5EDF3"
    android:gravity="center">

    <TextView
        android:id="@+id/homeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, how are you today?"
        android:textColor="#004B8C"
        android:textSize="24sp"
        android:layout_marginBottom="80dp"
        android:layout_marginTop="-60dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_quiz"
        android:layout_width="260dp"
        android:layout_height="100dp"
        android:background="@drawable/edit_button_homefragment"
        android:drawableLeft="@drawable/miok_copy3"
        android:drawablePadding="20dp"
        android:fontFamily="@font/lalezar_regular"
        android:padding="10dp"
        android:text="TAKE QUIZ"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="-60dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_contact"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/mustard_button_homefragment"
        android:fontFamily="@font/lalezar_regular"
        android:text="Contacts"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/ic_contact_wbg_copy"
        android:paddingLeft="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_message"
        android:layout_width="260dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:background="@drawable/mustard_button_homefragment"
        android:text="Message Everyone"
        android:textColor="#ffffff"
        android:fontFamily="@font/lalezar_regular"
        android:drawableLeft="@drawable/ic_message_wbg_copy"
        android:paddingLeft="20dp"/>
    <!-- Add more UI elements here -->
</LinearLayout>
